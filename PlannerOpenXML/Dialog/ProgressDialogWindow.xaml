<Window x:Class="PlannerOpenXML.Dialog.ProgressDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerOpenXML.Dialog"
        mc:Ignorable="d"
        Height="140" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#FF007ACC"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid Background="#FF007ACC" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0" 
            Text="Generating Planner..." 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" FontWeight="Medium"/>
        <ProgressBar 
            Grid.Row="2" 
            Name="progressBar" 
            IsIndeterminate="True" 
            HorizontalAlignment="Center" 
            Width="200" 
            Height="10" 
            Foreground="Gray"/>
    </Grid>
</Window>
